@model IEnumerable<IPLWeb.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Comments</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Home Team
            </th>
            <th>
                Guest Team
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentDate)
            </th>
            <th>
                User ID
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Match.Team1.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Match.Team2.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CommentID">Delete This Comment</a>
            </td>
        </tr>
        }
    </tbody>
</table>
