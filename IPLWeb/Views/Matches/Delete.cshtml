@model IPLWeb.Models.Match

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Are you sure you want to delete Match Details?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Season)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Season.SeasonYear)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team1.TeamName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team2.TeamName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">View All Matches</a>
    </form>
</div>
