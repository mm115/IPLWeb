@model IPLWeb.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1 class="text-center">Add Comment To @ViewData["Team1"] vs @ViewData["Team2"]</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <textarea asp-for="CommentText" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
                <input type="hidden" asp-for="MatchID" value='@ViewData["MatchID"]' />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Match Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
