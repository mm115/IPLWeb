@model IEnumerable<IPLWeb.Models.Team>
@{
    ViewData["Title"] = "Home Page";
}
<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>
        <li data-target="#demo" data-slide-to="4"></li>
        <li data-target="#demo" data-slide-to="5"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="https://www.iplt20.com/" target="_blank"><img src="~/slider/slide1.jpg" alt="Slide 1" style="width:100%;height:500px"></a>
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <a href="https://www.iplt20.com/" target="_blank"> <img src="~/slider/slide2.jpg" alt="Slide 2" style="width:100%;height:500px"></a>
            <div class="carousel-caption text-dark">

            </div>
        </div>
        <div class="carousel-item">
            <a href="https://www.iplt20.com/" target="_blank"> <img src="~/slider/slide3.jpg" alt="Slide 3" style="width:100%;height:500px"></a>
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <a href="https://www.iplt20.com/" target="_blank">  <img src="~/slider/slide4.jpg" alt="Slide 4" style="width:100%;height:500px"></a>
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <a href="https://www.iplt20.com/" target="_blank">  <img src="~/slider/slide5.jpg" alt="Slide 5" style="width:100%;height:500px"></a>
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slider/slide6.jpg" alt="Slide 6" style="width:100%;height:500px">
            <div class="carousel-caption">

            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<hr />
<div class="row" style="margin-bottom:200px;">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-1">
            <div class="card">
                <center>
                    <img src="~/teams/@item.TeamID@item.Extension" class="img-fluid" alt="">
                </center>
                <div class="card-body">
                    <a class="btn btn-dark btn-block text-center"
                       asp-action="ViewMatches" asp-route-id="@item.TeamID">@item.TeamName</a>
                </div>

            </div>
        </div>
    }
</div>