@model IEnumerable<IPLWeb.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">View All Matches</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Match</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @item.MatchDate.ToString("dddd, dd MMMM yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.SeasonYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2.TeamName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.TeamID">Edit</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.TeamID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TeamID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
